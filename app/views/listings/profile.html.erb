<div id="listings-table">
	<!-- 	 testing this one, yet to work <h1>Welcome, <%= @email %></h1> -->
	<h1>Welcome, <%= @email %></h1>
<h1>Listings</h1>
<table class="table">
<% if @home_service_params == 'true' %>
			<%= form_tag(listings_path, method: "get", local: true, class: "d-inline-block m-2") do %>
			<div class="input-group">
					<%= hidden_field_tag 'home_service', 'true' %>
					<div class="input-group-append border-0">
						<button class="btn btn-primary rounded" type="submit" disabled >
							<span class="fas fa-filter mr-2"> Home Service Only</span>
						</button>
					</div>
			</div>
			<% end %>
			<%= form_tag(listings_path, method: "get", local: true, class: "d-inline-block m-2") do %>
			<div class="input-group">
					<div class="input-group-append border-0">
						<button class="btn btn-primary rounded" type="submit">
							<span class="fas fa-filter mr-2"> All Groomers</span>
						</button>
					</div>
			</div>
			<% end %>
		<% else %>
			<%= form_tag(listings_path, method: "get", local: true, class: "d-inline-block m-2") do %>
			<div class="input-group">
					<%= hidden_field_tag 'home_service', 'true' %>
					<div class="input-group-append border-0">
						<button class="btn btn-primary rounded" type="submit">
							<span class="fas fa-filter mr-2"> Home Service Only</span>
						</button>
					</div>
			</div>
			<% end %>
			<%= form_tag(listings_path, method: "get", local: true, class: "d-inline-block m-2") do %>
			<div class="input-group">
					<div class="input-group-append border-0">
						<button class="btn btn-primary rounded" type="submit" disabled>
							<span class="fas fa-filter mr-2"> All Groomers</span>
						</button>
					</div>
			</div>
			<% end %>
		<% end %>
<br>

  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Address</th>
      <th scope="col">Postal code</th>
      <th scope="col">Email</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Photo</th>
      <th scope="col">Home service</th>
      <th scope="col">Aggressive pets accepted</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.phone %></td>
        <td><%= listing.address %></td>
        <td><%= listing.postal_code %></td>
        <td><%= mail_to listing.email %></td>
        <td><%= listing.description %></td>
        <td><%= listing.price %></td>
        <td><%= image_tag(url_for(listing.image_url)) %></td>
        <td><%= human_boolean(listing.home_service) %></td>
        <td><%= human_boolean(listing.aggressive_pets_accepted) %></td>
        <td><button type="button" class="btn btn-info">
            <%= link_to 'Show', listing %>
                </button></td>
        <td><button type="button" class="btn btn-info">
            <%= link_to 'Edit', edit_listing_path(listing) %>
                </button></td>
        <td><button type="button" class="btn btn-info">
            <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' } %>
        </button></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
<div>

      <% if user_signed_in? %>
      <button type="button" class="btn btn-info">
        <%= link_to 'New Listing', new_listing_path %>
        </button>
      <button type="button" class="btn btn-info">
        <%= link_to 'log out', destroy_user_session_url, method: :delete %>
        </button>
    <% end %>

</div>
