<p id="notice"><%= notice %></p>
<h1>Search result</h1>
<%if @search_results_listings.empty?%>
<h3>No result found</h3>
<%else%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Postal code</th>
      <th>Email</th>
      <th>Description</th>
      <th>Price</th>
      <th>Check us out</th>
      <th>Home service</th>
      <th>Aggressive pets accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @search_results_listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.phone %></td>
        <td><%= listing.address %></td>
        <td><%= listing.postal_code %></td>
        <td><%= listing.email %></td>
        <td><%= listing.description %></td>
        <td><%= listing.price %></td>
        <td><%= image_tag(url_for(listing.image_url)) %></td>
        <td><%= human_boolean(listing.home_service) %></td>
        <td><%= human_boolean(listing.aggressive_pets_accepted) %></td>

        <td><button type="button" class="btn btn-warning">
            <%= link_to 'Show', listing %>
                </button></td>

        <%
=begin%>
 <td><button type="button" class="btn btn-warning">
            <%= link_to 'Edit', edit_listing_path(listing) %>
                </button></td>

        <td><button type="button" class="btn btn-warning">
            <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' } %>
<%
=end%>
        </button></td>

      </tr>
    <% end %>
  </tbody>
</table>
  <% end %>
