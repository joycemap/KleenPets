<p id="notice"><%= notice %></p>
<div id="listings-table">
<h1>Listings</h1>
<table class="table">
<% if @home_service_params == 'true' %>
			<%= form_tag(listings_path, method: "get", local: true, class: "d-inline-block m-2") do %>
			<div class="input-group">
					<%= hidden_field_tag 'home_service', 'true' %>
					<div class="input-group-append border-0">
						<button class="btn btn-primary rounded" type="submit" disabled >
							<span class="fas fa-filter mr-2"> Home Service Only</span>
						</button>
					</div>
			</div>
			<% end %>
			<%= form_tag(listings_path, method: "get", local: true, class: "d-inline-block m-2") do %>
			<div class="input-group">
					<div class="input-group-append border-0">
						<button class="btn btn-primary rounded" type="submit">
							<span class="fas fa-filter mr-2"> All Groomers</span>
						</button>
					</div>
			</div>
			<% end %>
		<% else %>
			<%= form_tag(listings_path, method: "get", local: true, class: "d-inline-block m-2") do %>
			<div class="input-group">
					<%= hidden_field_tag 'home_service', 'true' %>
					<div class="input-group-append border-0">
						<button class="btn btn-primary rounded" type="submit">
							<span class="fas fa-filter mr-2"> Home Service Only</span>
						</button>
					</div>
			</div>
			<% end %>
      <br>
			<%= form_tag(listings_path, method: "get", local: true, class: "d-inline-block m-2") do %>
			<div class="input-group">
					<div class="input-group-append border-0">
						<button class="btn btn-primary rounded" type="submit" disabled>
							<span class="fas fa-filter mr-2"> All Groomers</span>
						</button>
					</div>
			</div>
			<% end %>
		<% end %>

 <br>
 <p><strong>Refine by price:</strong></p>
        <%= form_for "",url: listings_path, role: "search", method: :get do %>
       <%= text_field_tag :searchp, @search_pricen_term,placeholder: "Min..." %>
       <%= text_field_tag :searchpx, @search_pricex_term,placeholder: "Max..." %>
       <%= submit_tag "Go" %>
     <% end %>
<br>

  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Address</th>
      <th scope="col">Postal code</th>
      <th scope="col">Email</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Photo</th>
      <th scope="col">Home service</th>
      <th scope="col">Aggressive pets accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.phone %></td>
        <td><%= listing.address %></td>
        <td><%= listing.postal_code %></td>
        <td><%= mail_to listing.email %></td>
        <td><%= listing.description %></td>
        <td><%= listing.price %></td>
        <td><img src="<%=listing.image_url%>" width="auto" height="200" border="2"/></td>
        <td><%= human_boolean(listing.home_service) %></td>
        <td><%= human_boolean(listing.aggressive_pets_accepted) %></td>
        <td><button type="button" class="btn btn-info">
            <%= link_to 'Show', listing %>
                </button></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
<div>
      <% if user_signed_in? %>
      <button type="button" class="btn btn-info">
        <%= link_to 'New Listing', new_listing_path %>
        <%= link_to 'log out', destroy_user_session_url, method: :delete %>
        </button>
    <% end %>

</div>
    <div id="search-results">
</div>
<br>
<div>
</div>