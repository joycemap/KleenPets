<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Postal code</th>
      <th>Email</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image url</th>
      <th>Home service</th>
      <th>Aggressive pets accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.phone %></td>
        <td><%= listing.address %></td>
        <td><%= listing.postal_code %></td>
        <td><%= listing.email %></td>
        <td><%= listing.description %></td>
        <td><%= listing.price %></td>
        <td><%= listing.image_url %></td>
        <td><%= human_boolean(listing.home_service) %></td>
        <td><%= human_boolean(listing.aggressive_pets_accepted) %></td>

        <td><button type="button" class="btn btn-warning">
            <%= link_to 'Show', listing %>
                </button></td>

        <td><button type="button" class="btn btn-warning">
            <%= link_to 'Edit', edit_listing_path(listing) %>
                </button></td>

        <td><button type="button" class="btn btn-warning">
            <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' } %>
        </button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
    <button type="button" class="btn btn-warning">
<%= link_to 'New Listing', new_listing_path %>
</button>
</div>